{
    "name": "test",
    "version": "0.0.1",
    "license": "UNLICENSED",
    "description": "",
    "devDependencies": {
        "@commitlint/cli": "^17.6.3",
        "@commitlint/config-conventional": "^17.6.3",
        "@jest/types": "^29.5.0",
        "@types/jest": "^29.5.1",
        "@types/node": "~16.11.68",
        "@typescript-eslint/eslint-plugin": "^5.59.5",
        "@typescript-eslint/parser": "^5.59.5",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-unused-imports": "^2.0.0",
        "husky": "^7.0.4",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "tslib": "~2.3.1",
        "tsutils": "~3.21.0",
        "typescript": "^5.0.4"
    },
    "scripts": {
        "cleanup": "pnpm run '/^cleanup:.*/'",
        "cleanup:dist": "find . -name \"dist\" -exec rm -rf '{}' +",
        "cleanup:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./__tests__/jest-e2e.json",
        "test:watch": "jest --watch",
        "prepare": "husky install",
        "lint": "pnpm run '/^lint:.*/'",
        "lint:ts": "npx eslint --ext '**/*.{ts,tsx}'",
        "lint:frontend": "tsc --project apps/frontend/tsconfig.json",
        "lint:backend": "tsc --project apps/backend/tsconfig.json",
        "format": "prettier -w . -u",
        "format:check": "prettier . -c",
        "start:backend": "pnpm run --filter {apps/backend} start:dev",
        "start:frontend": "pnpm run --filter {apps/frontend} dev",
        "build:frontend": "pnpm run --filter {apps/frontend} build",
        "compose:up": "docker compose -f dev.docker-compose.yml up -d",
        "compose:logs": "docker compose -f dev.docker-compose.yml logs -f",
        "compose:down": "docker compose -f dev.docker-compose.yml down --volumes && pnpm run terraform:rm"
    },
    "author": "kasir-barati",
    "engines": {
        "node": ">=18"
    }
}
